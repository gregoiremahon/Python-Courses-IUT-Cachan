
from logging import shutdown
from random import randrange

Value = randrange(4)
Tentatives = 3

while(Tentatives <=3):

    Test1 = int(input("Trouvez le nombre: "))
    if (Test1 == Value):
        print("Bravo, vous avez trouvé la valeur : ", Value)
        break
    else:
        print("Faux, encore 2 essais")
        Tentatives += 1

    Test2 = Test1 = int(input("Trouvez le nombre tentative 2: "))

    if (Test2 == Value):
        print("Bravo, vous avez trouvé la valeur : ", Value)
        break
    else:
        print("Faux, encore 1 essais")
        Tentatives += 1

    Test3 = int(input("Trouvez le nombre tentative 3: "))

    if (Test3 == Value):
        print("Bravo, vous avez trouvé la valeur : ", Value)
        break
    else:
        print("FAUX, la valeur était :", Value)
        Tentatives += 1
